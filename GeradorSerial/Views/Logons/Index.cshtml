@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Entrar &middot; Gerador de Chave</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">

    <link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet" />
    <style type="text/css">
        body {
            padding-top: 40px;
            padding-bottom: 40px;
            background-color: #f5f5f5;
        }

        .form-signin {
            max-width: 400px;
            padding: 19px 29px 29px;
            margin: 0 auto 20px;
            background-color: #fff;
            border: 1px solid #e5e5e5;
            -webkit-border-radius: 5px;
            -moz-border-radius: 5px;
            border-radius: 5px;
            -webkit-box-shadow: 0 1px 2px rgba(0,0,0,.05);
            -moz-box-shadow: 0 1px 2px rgba(0,0,0,.05);
            box-shadow: 0 1px 2px rgba(0,0,0,.05);
        }

            .form-signin .form-signin-heading,
            .form-signin .checkbox {
                margin-bottom: 10px;
            }

            .form-signin input[type="text"],
            .form-signin input[type="password"] {
                font-size: 16px;
                height: auto;
                margin-bottom: 15px;
                padding: 7px 9px;
            }
    </style>
</head>

<body>

    <div class="container">

        @using (Html.BeginForm("Index", "Logons", FormMethod.Post, new { @class = "form-signin" }))
        {
            

        <h2 class="form-signin-heading">Registro</h2>
            <p style="color:Red;">@ViewBag.Erro</p>
            <input type="text" name="cpf" class="input-block-level" placeholder="CPF" value="@ViewBag.Cpf" />
            <input type="password" name="senha" class="input-block-level" placeholder="Senha" />

            <button class="btn btn-large btn-primary" type="submit">Entrar</button>
        }


    </div> <!-- /container -->

</body>
</html>
